<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.enrique.classroom_reservations.EditReservationActivity"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/profileBox"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/material_blue_grey_800"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/iconcalendar"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar email"
                android:textColor="#fff"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="314dp"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_weight="0.81">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_margin="0dp"
            android:layout_weight="1.10">
            <TextView
                android:text="Asunto"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#ef6c00"
                android:textSize="22dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/etxSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="18dp"
                android:textColor="@android:color/black">

                <requestFocus />
            </EditText>

            <View
                android:id="@+id/UnderLine"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/editText1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="#ef6c00" />

            <TextView
                android:text="Mensaje"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:textColor="#ef6c00"
                android:textSize="22dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/etxMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:lines="2">
                <requestFocus />
            </EditText>

            <View
                android:id="@+id/UnderLine2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/editText1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="#ef6c00" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:choiceMode="multipleChoice"
                android:background="#ffb74d"
                android:layout_marginTop="5dp"></ListView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">
        <Button
            android:text="Enviar"
            android:id="@+id/btnSendMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:layout_margin="10dp"
            android:layout_weight="0.25"
            android:textColor="@android:color/white" />
        <Button
            android:text="Cancelar"
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:layout_margin="10dp"
            android:layout_weight="0.25"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>